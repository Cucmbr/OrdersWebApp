@using OrdersWebApp.Models
@model Order

<p class="fs-1 text-center">Create new order</p>

<form class="w-50 m-auto" method="post" asp-action="CreateOrder">
    
    <div class="row mb-4">
        <label class="form-label text-start col-sm-4 col-form-label">Sender city</label>
        <div class="col-sm-8">
            <input class="form-control" type="text" asp-for="SenderCity" />
            <span asp-validation-for="SenderCity" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-4">
        <label class="form-label text-start col-sm-4 col-form-label">Sender address</label>
        <div class="col-sm-8">
            <input class="form-control" type="text" asp-for="SenderAddress" />
            <span asp-validation-for="SenderAddress" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-4">
        <label class="form-label text-start col-sm-4 col-form-label">Recipient city</label>
        <div class="col-sm-8">
            <input class="form-control" type="text" asp-for="RecipientCity" />
            <span asp-validation-for="RecipientCity" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-4">
        <label class="form-label text-start col-sm-4 col-form-label">Recipient address</label>
        <div class="col-sm-8">
            <input class="form-control" type="text" asp-for="RecipientAddress" />
            <span asp-validation-for="RecipientAddress" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-4">
        <label class="form-label text-start col-sm-4 col-form-label">Cargo weight, kg</label>
        <div class="col-sm-8">
            <input class="form-control" type="number" step="0.01" asp-for="CargoWeight" />
            <span asp-validation-for="CargoWeight" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-4">
        <label class="form-label text-start col-sm-4 col-form-label">Cargo pickup date</label>
        <div class="col-sm-8">
            <input class="form-control" type="date" asp-for="CargoPickupDate" />
            <span asp-validation-for="CargoPickupDate" class="text-danger"></span>
        </div>
    </div>

    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <a type="button" class="btn btn-secondary me-md-2" asp-action="Index">Cancel</a>
        <button type="submit" class="btn btn-primary">Save changes</button>
    </div>
</form>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}